<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="gradient-background">
<div class="container">
    <h1>Blog</h1>
    <form action="/create" method="POST" class="pb-3">
    <input type="text" placeholder="post" name="ptext">
  <input type="submit" class="create-btn" " value="create post">
</form>
<% if(locals.list){list.forEach((text=>{%>
    <div>
        <div class="p-5 text-center rounded-3 --bs-body-font-family post"><p><%= text["text"] %></p></div>
        <div class="flex-container">
            <button class="edit btn btn-sm btn-outline-dark _<%= text["id"] %>">edit</button>
           
        <form action="/delete" method="post">
                <input type="hidden" name="pid" value="<%= text["id"] %>">
                <input type="submit" class="btn btn-sm btn-dark" value="delete">
            </form>
        </div>
        <form action="/edit" method="POST" class="pb-3 edit-form _<%= text["id"] %>_">
            <input type="hidden" name="pid" value="<%= text["id"] %>">
            <input type="text" placeholder="post" name="ptext" value="<%= text["text"]%>">
            <input type="submit" class="create-btn" value="confirm">
        </form> 
    </div>
    <% })) }%>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="/styles.js" charset="UTF-8"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>